<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>OrientDB CRUD</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
  </head>
  <body>
    <div class="container mt-5">
      <div class="row">
        <div class="col">
          <h1>OrientDB CRUD Example</h1>
        </div>
        <div class="col text-end">
          <a href="/add" class="btn btn-primary fs-5">Add</a>
        </div>
      </div>
      <table class="table table-striped mt-5">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Author</th>
            <th scope="col">Year</th>
            <th scope="col" class="text-center">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% books.forEach((book, index) => { %>
            <tr>
              <th scope="row"><%= index + 1 %></th>
              <td><%= book.title %></td>
              <td><%= book.author %></td>
              <td><%= book.year %></td>
              <td class="text-center">
                <a href="/edit/<%= book.id %>" class="btn btn-primary btn-sm">Edit</a>
                <a href="/delete/<%= book.id %>" class="btn btn-danger btn-sm">Delete</a>
              </td>
          <% }) %>
        </tbody>
      </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
  </body>
</html>
